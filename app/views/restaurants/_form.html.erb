
<%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :street %><br>
    <%= f.text_field :street, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :city %><br>
    <%= f.text_field :city, :class => 'form-control', :placeholder => 'Pittsburgh'  %>
  </div>
  <div class="form-group">
    <%= f.label :state %><br>
    <%= f.text_field :state, :class => 'form-control', :placeholder => 'PA' %>
  </div>
  <div class="form-group">
    <%= f.label :zip_code %><br>
    <%= f.number_field :zip_code, :class => 'form-control', :placeholder => '15213' %>
  </div>
  <div class="field">
    <%= f.label :cuisine %><br>
    <%= f.text_field :cuisine, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :area %><br>
    <%= f.select :area, Restaurant.areas, :class => 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-default' %>
  </div>
<% end %>
